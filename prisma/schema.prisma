generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CONNECTION_URL")
}

model ActivityEntity {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  activity      String
  type          String
  participants  Int
  price         Int
  link          String
  key           String
  accessibility Int

  @@map("activity")
}
