generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_CONNECTION_URL")
}

model ActivityEntity {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  activity      String
  type          String
  participants  String
  price         String
  link          String?
  key           String
  accessibility String

  @@map("activity")
}
